{% extends 'base.twig' %}

{% block title %}TicketApp - Management App with Twig{% endblock %}

{% block header %}
<!-- Navigation -->
<nav class="relative z-10 px-4 py-6 bg-white shadow-sm">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="text-xl sm:text-2xl font-bold text-primary-600">TicketApp</div>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex space-x-4">
            <a href="./login.html" class="text-gray-600 hover:text-primary-600 transition-colors duration-200">Login</a>
            <a href="./signup.html" class="btn-primary">Get Started</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden text-gray-600 hover:text-primary-600 focus:outline-none focus:text-primary-600" aria-label="Toggle mobile menu">
            <svg id="hamburger-icon" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="close-icon" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4">
        <div class="space-y-2">
            <a href="./login.html" class="block w-full text-center text-gray-600 hover:text-primary-600 py-2 px-4 rounded-lg hover:bg-gray-100 transition-colors duration-200 border border-gray-300">Login</a>
            <a href="./signup.html" class="block w-full text-center btn-primary">Get Started</a>
        </div>
    </div>
</nav>
{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-primary-50 via-white to-primary-100">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
        <div class="absolute">
            <!-- Decorative Circles - Hidden on mobile, visible on larger screens -->
            <div class="hidden sm:block absolute top-20 left-10 w-12 h-12 sm:w-16 sm:h-16 md:w-20 md:h-20 bg-primary-200 rounded-full opacity-60 float" aria-hidden="true"></div>
            <div class="hidden sm:block absolute top-40 right-20 w-10 h-10 sm:w-12 sm:h-12 md:w-16 md:h-16 bg-warning-200 rounded-full opacity-50 float" style="animation-delay: 1s" aria-hidden="true"></div>
            <div class="hidden md:block absolute bottom-40 left-1/4 w-8 h-8 md:w-12 md:h-12 bg-success-200 rounded-full opacity-40 float" style="animation-delay: 2s" aria-hidden="true"></div>
        </div>
        
        <div class="max-w-7xl mx-auto px-4 py-12 sm:py-16 md:py-20 text-center relative z-10">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-7xl font-bold text-gray-900 mb-4 sm:mb-6 animate-fade-in">
                Streamline Your <span class="text-primary-600 block">Ticket Management</span>
            </h1>
            <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 mb-6 sm:mb-8 max-w-3xl mx-auto px-2 animate-slide-up">
                A powerful, modern ticket management system that helps you organize, track, and resolve issues efficiently across your team.
            </p>
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center animate-slide-up px-4">
                <a href="./signup.html" class="btn-primary text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 w-full sm:w-auto">Get Started Free</a>
                <a href="./login.html" class="btn-secondary text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 w-full sm:w-auto">Sign In</a>
            </div>
        </div>

        <!-- Wavy Background -->
        <div class="absolute bottom-0 left-0 w-full">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="relative block w-full h-20">
                <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-white"></path>
            </svg>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-12 sm:py-16 md:py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <div class="text-center mb-12 sm:mb-16">
                <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4 px-2">Everything You Need to Manage Tickets</h2>
                <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-2xl mx-auto px-4">Powerful features designed to streamline your workflow and boost productivity</p>
            </div>

            <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8">
                <!-- Feature Card 1 -->
                <div class="card hover:shadow-xl transition-shadow duration-300">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-3 sm:mb-4" aria-hidden="true">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">Create & Track</h3>
                    <p class="text-sm sm:text-base text-gray-600">Easily create tickets with detailed information and track their progress through different stages.</p>
                </div>

                <!-- Feature Card 2 -->
                <div class="card hover:shadow-xl transition-shadow duration-300">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 bg-success-100 rounded-lg flex items-center justify-center mb-3 sm:mb-4" aria-hidden="true">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">Analytics Dashboard</h3>
                    <p class="text-sm sm:text-base text-gray-600">Get insights into your ticket metrics with comprehensive analytics and reporting features.</p>
                </div>

                <!-- Feature Card 3 -->
                <div class="card hover:shadow-xl transition-shadow duration-300">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 bg-warning-100 rounded-lg flex items-center justify-center mb-3 sm:mb-4" aria-hidden="true">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">Secure & Reliable</h3>
                    <p class="text-sm sm:text-base text-gray-600">Enterprise-grade security with reliable authentication and data protection.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-12 sm:py-16 md:py-20 bg-primary-600">
        <div class="max-w-7xl mx-auto px-4 text-center">
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-3 sm:mb-4 px-2">Ready to Get Started?</h2>
            <p class="text-base sm:text-lg md:text-xl text-primary-100 mb-6 sm:mb-8 max-w-2xl mx-auto px-4">Join thousands of teams already using TicketApp to streamline their workflow</p>
            <a href="./signup.html" class="bg-white text-primary-600 hover:bg-gray-100 font-semibold py-3 px-6 sm:px-8 rounded-lg transition-colors duration-200 inline-block">Start Free Trial</a>
        </div>
    </section>
</div>
{% endblock %}

{% block footer %}
<footer class="bg-gray-900 text-white py-8 sm:py-10 md:py-12">
    <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8">
            <div class="col-span-2 md:col-span-1">
                <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4">TicketApp</h3>
                <p class="text-sm sm:text-base text-gray-400">The modern ticket management solution for teams of all sizes.</p>
            </div>
            <div>
                <h4 class="font-semibold mb-3 sm:mb-4 text-sm sm:text-base">Product</h4>
                <ul class="space-y-2 text-gray-400 text-sm sm:text-base">
                    <li><a href="#" class="hover:text-white transition-colors">Features</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">Pricing</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">API</a></li>
                </ul>
            </div>
            <div>
                <h4 class="font-semibold mb-3 sm:mb-4 text-sm sm:text-base">Support</h4>
                <ul class="space-y-2 text-gray-400 text-sm sm:text-base">
                    <li><a href="#" class="hover:text-white transition-colors">Help Center</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">Contact Us</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">Status</a></li>
                </ul>
            </div>
            <div>
                <h4 class="font-semibold mb-3 sm:mb-4 text-sm sm:text-base">Company</h4>
                <ul class="space-y-2 text-gray-400 text-sm sm:text-base">
                    <li><a href="#" class="hover:text-white transition-colors">About</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">Blog</a></li>
                    <li><a href="#" class="hover:text-white transition-colors">Careers</a></li>
                </ul>
            </div>
        </div>
        <div class="border-t border-gray-800 mt-6 sm:mt-8 pt-6 sm:pt-8 text-center text-gray-400 text-sm sm:text-base">
            <p>&copy; 2025 TicketApp. All rights reserved.</p>
        </div>
    </div>
</footer>
{% endblock %}

